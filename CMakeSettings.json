      "installRoot": "${projectDir}\\out\\install\\${name}",
      "cmakeCommandArgs": " -DBUILD_TESTS=OFF -DBUILD_EXAMPLES=OFF -DUSE_BUNDLED_ZLIB=ON -DUSE_SSH=OFF -DBEAM_LINK_TYPE=Static -DBEAM_USE_STATIC_RUNTIME=On -DSTATIC_CRT=ON -DUSE_HTTPS=OFF -DBUILD_SHARED_LIBS=OFF",
